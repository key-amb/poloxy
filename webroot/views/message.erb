<!-- Content Header (Page header) -->
<section class="content-header">
<h1>Message
<%- @group_breadcrumb.each do |bc| -%>
  <span class="icon">
  <i class="icon fa fa-angle-double-right" aria-hidden="true"></i>
  </span>
  <a href="<%= bc[:path] %>"><%= bc[:name] %></a>
<%- end -%>
  <span class="icon">
  <i class="icon fa fa-angle-double-right" aria-hidden="true"></i>
  </span>
  #<%= @message.id %>
</h1>
</section>

<!-- Main content -->
<section class="content">

<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">#<%= @message.id %> : <%= @message.title %></h3>
    <div class="box-tools pull-right">
      <button class="btn btn-box-tool" type="button" data-widget="collapse"><i class="fa fa-minus"></i></button>
    </div>
  </div>
<div class="box-body">
<table class="table table-bordered">
  <tbody>
  <%- %w(title group level type address body misc delivered_at).each do |col| -%>
  <tr>
    <th><%= col.extend(CamelSnake).to_pascal %></th>
    <td><%= @message.send(col) %></td>
  </tr>
  <%- end -%>
  </tbody>
</table>
</div>
<!-- /.box-body -->
</div>
<!-- /.box -->

</section>
<!-- /.content -->
